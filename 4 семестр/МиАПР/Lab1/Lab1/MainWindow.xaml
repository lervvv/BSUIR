<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="МиАПР 1" Height="492" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="473*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="MainImage" Margin="10,53,9,16" Stretch="Fill" Grid.ColumnSpan="2" />
        <xctk:IntegerUpDown x:Name="ClassesCountInput" Minimum="1" Value="10" Increment="1" Maximum="100" HorizontalAlignment="Left" Margin="356,6,0,0" VerticalAlignment="Top" Width="76" Grid.Column="1"  />
        <xctk:IntegerUpDown x:Name="PointsCountInput" Minimum="1" Value="1000" Increment="1" Maximum="1000000" HorizontalAlignment="Left" Margin="86,6,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"  />
        <Button x:Name ="CalculateButton"  Content="Распределить" HorizontalAlignment="Left" Margin="467,6,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2"><Run Language="ru-ru" Text="Количество"/><Run Text=" точек"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="207,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"><Run Language="ru-ru" Text="Количество"/><Run Language="ru-ru" Text=" "/><Run Text="классов"/></TextBlock>
    </Grid>
</Window>
