<Window x:Class="WpfWIndowApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="МиАПР 5" Height="478" Width="852">
    <Grid>
        <GroupBox Header="Обучение" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="222"
                  Width="306">
            <WrapPanel HorizontalAlignment="Left" Height="203" Margin="0,0
                              ,0,0"
                       VerticalAlignment="Top" Width="304">
                <GroupBox Header="Класс 1" HorizontalAlignment="Left" Margin="10,10,0,0
                      "
                          VerticalAlignment="Top" Height="188" Width="136">
                    <WrapPanel HorizontalAlignment="Left" Height="170" Margin="0,0
                           ,0,0"
                               VerticalAlignment="Top" Width="127">
                        <GroupBox Header="Точка 1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83"
                                  Width="122">
                            <WrapPanel HorizontalAlignment="Left" Height="50"
                                       Margin="5,5                                ,0,0" VerticalAlignment="Top"
                                       Width="94">
                                <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point11XUpDown1" Minimum="-10" Value="-1" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Width="75" />
                                <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point11YUpDown1" Minimum="-10" Value="0" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    Width="75" />
                            </WrapPanel>
                        </GroupBox>
                        <GroupBox Header="Точка 2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83"
                                  Width="122">
                            <WrapPanel HorizontalAlignment="Left" Height="50"
                                       Margin="5,5                                ,0,0" VerticalAlignment="Top"
                                       Width="94">
                                <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point12XUpDown" Minimum="-10" Value="1" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Width="75" />
                                <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point12YUpDown" Minimum="-10" Value="1" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    Width="75" />
                            </WrapPanel>
                        </GroupBox>
                    </WrapPanel>

                </GroupBox>
                <GroupBox Header="Класс 2" HorizontalAlignment="Left" Margin="10,10,0,0                       "
                          VerticalAlignment="Top" Height="188" Width="136">
                    <WrapPanel HorizontalAlignment="Left" Height="170" Margin="0,0                            ,0,0"
                               VerticalAlignment="Top" Width="127">
                        <GroupBox Header="Точка 1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83"
                                  Width="122">
                            <WrapPanel HorizontalAlignment="Left" Height="50"
                                       Margin="5,5                                ,0,0" VerticalAlignment="Top"
                                       Width="94">
                                <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point21XUpDown2" Minimum="-10" Value="2" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Width="75" />
                                <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point21YUpDown2" Minimum="-10" Value="0" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    Width="75" />
                            </WrapPanel>
                        </GroupBox>
                        <GroupBox Header="Точка 2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83"
                                  Width="122">
                            <WrapPanel HorizontalAlignment="Left" Height="50"
                                       Margin="5,5                                ,0,0" VerticalAlignment="Top"
                                       Width="94">
                                <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point22XUpDown1" Minimum="-10" Value="1" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                                    Width="75" />
                                <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <xctk:IntegerUpDown x:Name="Point22YUpDown1" Minimum="-10" Value="-2" Increment="1"
                                                    Maximum="10" HorizontalAlignment="Left" VerticalAlignment="Top"
                                                    Width="75" />
                            </WrapPanel>
                        </GroupBox>
                    </WrapPanel>

                </GroupBox>
            </WrapPanel>

        </GroupBox>
        <Button x:Name="TeachingButton" Content="Обучение" HorizontalAlignment="Left" Margin="130,248,0,0"
                VerticalAlignment="Top" Width="75" Click="TeachingButton_Click" />
        <GroupBox Header="Тестовая выборка" HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top"
                  Height="144" Width="217">
            <WrapPanel HorizontalAlignment="Left" Height="121" Margin="0,0,0,0" VerticalAlignment="Top" Width="197">
                <GroupBox Header="Точка 1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="83" Width="122">
                    <WrapPanel HorizontalAlignment="Left" Height="50" Margin="5,5                                ,0,0"
                               VerticalAlignment="Top" Width="94">
                        <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <xctk:IntegerUpDown x:Name="TestPointXIntegerUpDown" Minimum="-10" Value="0" Increment="1"
                                            Maximum="10" HorizontalAlignment="Center" VerticalAlignment="Top"
                                            Width="75" />
                        <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <xctk:IntegerUpDown x:Name="TestPointYIntegerUpDown" Minimum="-10" Value="0" Increment="1"
                                            Maximum="10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
                    </WrapPanel>
                </GroupBox>
                <Button x:Name="SelectButton" Content="Классифицировать" Margin="0,10,0,0" Width="118" Height="24"
                        IsEnabled="False" Click="SelectButton_Click" />
                <TextBlock x:Name="SelectResultText" TextWrapping="Wrap" Margin="5,10,0,0" Height="18" />
            </WrapPanel>
        </GroupBox>
        <TextBlock x:Name="FunctionTextBlock" HorizontalAlignment="Left" Margin="10,272,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" />
        <Image x:Name="Image" HorizontalAlignment="Left" Height="420" Margin="331,19,0,0" VerticalAlignment="Top"
               Width="500" MouseMove="Move_MouseMove" />

    </Grid>
</Window>